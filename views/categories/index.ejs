<%- include ('../partials/head') %>
<body>
    <%- include ('../partials/navbar') %>
    <div class="container">
        <div class="d-flex bd-highlight mb-3">
            <div class="me-auto p-2 bd-highlight">
                <h1 class="display-4 text-center">Categorias</h1>
            </div>
            <div class="align-self-center p-2 bd-highlight">
                <a class="btn btn-primary" href="/admin/categories">Criar categoria</a>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordred" style="margin-top: 3vh;">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Título</th>
                <th scope="col">Slug</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            
            <tbody>
                <% listacategorias.forEach(cat => { %>
                <tr scopre="row">
                    <th> <%= cat.id %> </th>
                    <td> <%= cat.title %> </td>
                    <td> <%= cat.slug %> </td>
                    <td>
                        <form action="/categories/delete" method="POST" style="display: inline;">
                            <input type="hidden" name="update" value=" <%= cat.id %>">
                            <a href="/admin/categories/edit/<%= cat.id %>" class="btn btn-warning">Editar</a>
                        </form>
                        
                        <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmDelete(event)">
                            <input type="hidden" name="id" value=" <%= cat.id %>">
                            <input type="hidden" name="dbTitle" value=" <%= cat.title %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                        
                    </td>
                </tr>
                <% }) %>
            </tbody>
           
          </table>
    </div>
</body>
<%- include ('../partials/footer') %>