<%- include ('partials/head') %>
<body>
    <%- include ('partials/navbarHome') %>
    <div class="container">
        <div class="jumbotron form-control bg-light" style="margin-top: 2vh; margin-bottom: 2vh;">
            <h1 class="display-4">Seja bem vindo</h1>
            <p class="lead">Este é um simples blog informativo</p>
            <hr class="my-4">
            <p>Abaixo verás nossos artigos</p>
            <a class="btn btn-outline-primary btn-lg" href="#" role="button" style="margin-bottom: 1vh;">Learn more</a>
        </div>

        <% articles.forEach(articles =>{ %>
            <div class="card" style="margin-bottom: 1vh;">
                <div class="card-header">
                    <%= articles.title %>
                </div>
                <div class="card-body">
                    <a href="/articles/<%= articles.slug %>" class="btn btn-primary">Ler artigo</a>
                </div>
            </div>
        <% }) %>
        <%- include ('partials/navPage') %>
    </div> 
</body>
<%- include ('partials/footer') %>